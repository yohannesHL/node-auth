{
    "compilerOptions": {
       "lib": [
          "es5",
          "es6"
       ],
       "target": "es6",
       "module": "amd",
       "moduleResolution": "node",
       "outDir": "./build",
       "outFile": "./build/server.js",                      
       "sourceMap": true,
       "emitDecoratorMetadata": true,
       "experimentalDecorators": true,
       "resolveJsonModule": true,
       "esModuleInterop": true,
       "baseUrl": "./",
       "rootDirs": ["./"],
       "pretty": true,
       "diagnostics": true,
       "strict": true,                           
       "alwaysStrict": true,
       "noImplicitAny": true,                
       "preserveConstEnums": true
    },
    "include": ["./src"],
    "exclude": ["./node_modules"]
 }